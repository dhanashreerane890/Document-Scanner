<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/layout_addFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameOfFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/_15sdp"
            app:drawableStartCompat="@drawable/ic_add_folder" />

        <TextView
            android:id="@+id/countFileInFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/moreOptions"
            android:text="0"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/moreOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/ic_more_options"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
